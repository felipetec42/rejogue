<div class="modal fade" id="modal-login" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body p-0">
        <div class="container">
          <div class="row">
            <div class="col-lg-6 modal-left">
              <div class="btns-modal-login">
                <div class="btn-signup ">CADASTRAR</div>
                <div class="btn-login active">ENTRAR</div>
              </div>
              <hr>
              <%= form_for(:user, :url => user_registration_path(:user), :html => { :id => "form-signup", :style => "display: none;" }) do |f| %>
                <div class="form-group">
                  <label for="signup-username">Nome de usuário</label>
                  <input type="text" class="form-control" id="signup-username" name="user[username]" placeholder="Digite um nome de usuário">
                </div>
                <div class="form-group">
                  <label for="signup-email">Email</label>
                  <input type="email" class="form-control" id="signup-email" name="user[email]" placeholder="Digite um email">
                </div>
                <div class="form-group">
                  <label for="signup-password">Senha</label>
                  <input type="password" class="form-control" id="signup-password" name="user[password]" placeholder="Senha">
                </div>
                <div class="form-check">
                  <input type="checkbox" class="form-check-input" id="signup-terms">
                  <label class="form-check-label" for="signup-terms">Concordo com os Termos de Uso</label>
                </div>
                <div class="form-group">
                  <button class="btn btn-primary">Cadastrar</button>
                  <div class="txt-login-link btn-cadastrado">Já sou cadastrado</div>
                </div>
              <% end %>

              <%= form_for(:user, :url => session_path(:user), :html => { :id => "form-login"}) do |f| %>
                <div class="form-group">
                  <label for="login-username">Login</label>
                  <input type="text" class="form-control" id="login-username" name="user[username]">
                </div>
                <div class="form-group">
                  <label for="login-password">Senha</label>
                  <input type="password" class="form-control" id="login-password" name="user[password]">
                </div>
                <div class="form-group">
                  <button class="btn btn-primary" type="submit">Entrar</button>
                  <div class="txt-login-link btn-cadastrar">Ainda não sou cadastrado</div>
                </div>
              <% end %>
            </div>
            <div class="col-lg-6 modal-right">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
